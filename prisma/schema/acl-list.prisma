model AclListModel {
  id          String         @id @default(uuid()) @db.Uuid
  name        String
  description String?
  vpcId       String?        @db.Uuid
  vpc         VPCModel?      @relation(fields: [vpcId], references: [id])
  AclRule     AclRuleModel[]
}

model AclRuleModel {
  id          String               @id @default(uuid()) @db.Uuid
  aclId       String               @db.Uuid
  cidrList    String[]
  action      AclActionModel
  startPort   String
  endPort     String
  trafficType AclTrafficType
  description String?
  protocol    NetworkProtocolModel
  acl         AclListModel         @relation(fields: [aclId], references: [id])
}

enum NetworkProtocolModel {
  TCP
  UDP
  ALL
}

enum AclTrafficType {
  ingress
  egress
}

enum AclActionModel {
  allow
  deny
}
