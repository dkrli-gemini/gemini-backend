enum DomainTypeModel {
  ROOT
  PARTNER
  CLIENT
}

model DomainModel {
  id   String @id @default(uuid()) @db.Uuid
  name String
  type DomainTypeModel @default(ROOT)

  rootId String? @db.Uuid
  root DomainModel? @relation("RootDomain", fields: [rootId], references: [id])
  children DomainModel[] @relation("RootDomain")

  cloudstackDomainId  String
  cloudstackAccountId String?

  // VPC
  vpc   VPCModel? @relation(fields: [vpcId], references: [id])
  vpcId String?   @db.Uuid


  ProjectModel ProjectModel[]
}

