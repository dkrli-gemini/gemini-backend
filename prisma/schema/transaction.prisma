model ValuableObjectModel {
  id                     String             @id @default(uuid()) @db.Uuid
  chargeType             ChargeType?
  costInCents            Int
  alternativeCostInCents Int?
  entityId               String?
  tag                    ValuableTag?
  TransactionModel       TransactionModel[]
}

model TransactionModel {
  id          String               @id @default(uuid()) @db.Uuid
  name        String
  description String?
  objectId    String?              @db.Uuid
  object      ValuableObjectModel? @relation(fields: [objectId], references: [id])
}

enum ChargeType {
  MONTHLY
  HOURLY
  ONE_TIME
}

enum ValuableTag {
  VirtualMachineOffer
  VirtualMachineVolume
  PublicIP
}
