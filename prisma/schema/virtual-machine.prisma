model VirtualMachineModel {
  id                   String @id() @default(uuid()) @db.Uuid
  cloudstackId String
  name                 String
  ipAddress            String
  state                String

  template TemplateOfferModel? @relation(fields: [templateId], references: [id])
  templateId String? @db.Uuid

  instance InstanceModel? @relation(fields: [instanceId], references: [id])
  instanceId String? @db.Uuid

  // Project
  project   ProjectModel? @relation(fields: [projectId], references: [id])
  projectId String?       @db.Uuid
}

