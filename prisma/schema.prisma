generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// User
model UserModel {
  id           String              @id @default(uuid()) @db.Uuid
  name         String
  email        String
  domainMember DomainMemberModel[]
}

model DomainMemberModel {
  id     String     @id @default(uuid()) @db.Uuid
  user   UserModel? @relation(fields: [userId], references: [id])
  userId String?    @db.Uuid

  project        ProjectModel? @relation(fields: [projectModelId], references: [id])
  projectModelId String?       @db.Uuid

  role ProjectRoleModel
}

enum DomainTypeModel {
  ROOT
  PARTNER
  CLIENT
}

model DomainModel {
  id   String @id @default(uuid()) @db.Uuid
  name String
  type DomainTypeModel @default(ROOT)

  rootId String? @db.Uuid
  root DomainModel? @relation("RootDomain", fields: [rootId], references: [id])
  children DomainModel[] @relation("RootDomain")

  cloudstackDomainId  String
  cloudstackAccountId String?

  // VPC
  vpc   VPCModel? @relation(fields: [vpcId], references: [id])
  vpcId String?   @db.Uuid


  ProjectModel ProjectModel[]
}

model NetworkModel {
  id                String @id @default(uuid()) @db.Uuid
  name              String
  cloudstackId      String
  cloudstackOfferId String
  cloudstackAclId   String
  gateway           String
  netmask           String

  // Domain Model
  project   ProjectModel? @relation(fields: [projectId], references: [id])
  projectId String?      @db.Uuid
}

model VPCModel {
  id           String        @id @default(uuid()) @db.Uuid
  name         String
  cloudstackId String
  cidr         String
  dns1         String
  dns2         String
  state        String
  DomainModel  DomainModel[]
}

model ProjectModel {
  id                  String                @id() @default(uuid()) @db.Uuid
  name                String
  type                ProjectTypeModel?

  domain DomainModel? @relation(fields: [domainId], references: [id])
  domainId String @db.Uuid

  DomainMemberModel   DomainMemberModel[]
  VirtualMachineModel VirtualMachineModel[]

  NetworkModel NetworkModel[]
}

enum JobStatusEnum {
  PENDING
  DONE
}

enum JobTypeEnum {
  StartVM
  StopVM
  CreateVM
}

model JobModel {
  id String @id @default(uuid()) @db.Uuid
  cloudstackJobId String
  status JobStatusEnum
  type JobTypeEnum
  entityId String?
  error String?
}

model VirtualMachineModel {
  id                   String @id() @default(uuid()) @db.Uuid
  cloudstackId String
  name                 String
  os                   String
  ipAddress            String
  cloudstackTemplateId String
  state                String

  instance InstanceModel? @relation(fields: [instanceId], references: [id])
  instanceId String? @db.Uuid

  // Project
  project   ProjectModel? @relation(fields: [projectId], references: [id])
  projectId String?       @db.Uuid
}

enum ProjectTypeModel {
  ROOT
  MEMBER
}

enum ProjectRoleModel {
  OWNER
  ADMIN
  MEMBER
}

model InstanceModel {
  id String @id() @default(uuid()) @db.Uuid
  cloudstackId String
  name String
  memory String
  disk String
  cpu String

  VirtualMachineModel VirtualMachineModel[]
}